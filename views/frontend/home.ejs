<%- include('partials/header') %>

<!-- Banner Starts Here -->
<div class="main-banner header-text">
  <div class="container-fluid">
    <div class="owl-banner owl-carousel">

      <% posts.forEach(function(post) { %>
        <div class="item">
          <img src="/uploads/<%= post.image %>" alt="Post Image" width="300">
          <div class="item-content">
            <div class="main-content">
              <div class="meta-category">
                <span><%= post.categories %></span>
              </div>
              <a href="/posts/<%= post._id %>">
                <h4><%= post.title %></h4>
              </a>
              <ul class="post-info">
                <li><a href="#">Admin</a></li>
                <li><a href="#"><%= post.createdAt ? post.createdAt.toDateString() : "Unknown Date" %></a></li>
                <li><a href="#"><%= post.comments ? post.comments.length : 0 %> Comments</a></li>
              </ul>
            </div>
          </div>
        </div>
      <% }); %>

    </div>
  </div>
</div>
<!-- Banner Ends Here -->


<!-- Call To Action -->
<section class="call-to-action">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="main-content">
          <div class="row">
            <div class="col-lg-8">
              <span>Stand Blog HTML5 Template</span>
              <h4>Creative HTML Template For Bloggers!</h4>
            </div>
            <div class="col-lg-4">
              <div class="main-button">
                <a rel="nofollow" href="https://templatemo.com/tm-551-stand-blog" target="_parent">Download Now!</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


<!-- Blog Posts -->
<section class="blog-posts">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <div class="all-blog-posts">
          <div class="row">

            <% posts.forEach(function(post) { %>
              <div class="col-lg-12">
                <div class="blog-post">
                  <div class="blog-thumb">
                    <img src="/uploads/<%= post.image %>" alt="Post Image" width="300">
                  </div>
                  <div class="down-content">
                    <span><%= post.categories %></span>
                    <a href="/posts/<%= post._id %>">
                      <h4><%= post.title %></h4>
                    </a>
                    <ul class="post-info">
                      <li><a href="#">Admin</a></li>
                      <li><a href="#"><%= post.createdAt ? post.createdAt.toDateString() : "Unknown Date" %></a></li>
                      <li><a href="#"><%= post.comments ? post.comments.length : 0 %> Comments</a></li>
                    </ul>
                    <p><%= post.content.substring(0, 250) %>...</p>
                    <div class="post-options">
                      <div class="row">
                        <div class="col-6">
                          <ul class="post-tags">
                            <li><i class="fa fa-tags"></i></li>
                            <li><a href="#">Beauty</a>,</li>
                            <li><a href="#">Nature</a></li>
                          </ul>
                        </div>
                        <div class="col-6">
                          <ul class="post-share">
                            <li><i class="fa fa-share-alt"></i></li>
                            <li><a href="#">Facebook</a>,</li>
                            <li><a href="#"> Twitter</a></li>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% }) %>

          </div>
        </div>
      </div>
    </div>
  </div>

<%- include('partials/footer') %>
